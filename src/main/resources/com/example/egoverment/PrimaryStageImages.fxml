<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="scrollPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.egoverment.Education_Controller">
    <content>
        <AnchorPane>
            <children>

                <!-- Back Button -->
                <Button layoutX="14.0" layoutY="14.0" onAction="#handleBackAction" prefHeight="0" prefWidth="70.0" text="←">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>

                <!-- VBox for Images -->
                <VBox alignment="CENTER" layoutX="118.0" layoutY="18.0" prefHeight="1527.0" prefWidth="295.0" spacing="10">
                    <ImageView fitHeight="493.0" fitWidth="382.0" preserveRatio="true">
                        <image>
                            <Image url="@assets/prim_Arabic.jpg" />
                        </image>
                    </ImageView>

                    <ImageView fitHeight="500" fitWidth="400.0" preserveRatio="true">
                        <image>
                            <Image url="@assets/prim_english.jpg" />
                        </image>
                    </ImageView>

                    <ImageView fitHeight="500" fitWidth="400.0" preserveRatio="true">
                        <image>
                            <Image url="@assets/prim_maths.jpg" />
                        </image>
                    </ImageView>

                    <!-- Add more images as needed -->
                </VBox>
                <!-- Top-Right Image -->
                <ImageView fitHeight="81.0" fitWidth="120.0" layoutX="490.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/education-logo.png" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
