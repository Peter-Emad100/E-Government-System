   <children>
      <ImageView fitHeight="407.0" fitWidth="606.0" layoutX="-2.0" opacity="0.65" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/signup.jpg" />
         </image>
      </ImageView>
      <Text layoutX="252.0" layoutY="87.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User Login" />
      <Text layoutX="82.0" layoutY="152.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username/Email:" />
      <Text layoutX="82.0" layoutY="204.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password:" />
