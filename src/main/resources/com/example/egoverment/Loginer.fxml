      <TextField fx:id="usernameField" layoutX="222.0" layoutY="135.0" />
      <Text layoutX="99.0" layoutY="332.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Don't have an account yet?" />
      <Button layoutX="267.0" layoutY="315.0" mnemonicParsing="false" onAction="#goToSignUp" text="Sign up now" />
      <PasswordField fx:id="passwordField" layoutX="222.0" layoutY="187.0" />
      <TextField fx:id="passwordVisibleField" layoutX="222.0" layoutY="187.0" />
      <ImageView fitHeight="17.0" fitWidth="21.0" layoutX="350.0" layoutY="192.0" onMouseClicked="#togglePasswordVisibility" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/pass.png" />
         </image>
      </ImageView>

   </children>
</AnchorPane>
